datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  username  String? @unique
  firstName String?
  lastName  String?
  role      Role    @default(USER)
}

model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  description String

}

enum Role {
  USER
  ADMIN
}
