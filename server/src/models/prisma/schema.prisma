datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userFirebaseId String  @id
  firstName      String?
  lastName       String?
  photoURL       String?
  post           Post[]
}

model Post {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  updateAt   DateTime    @updatedAt
  title      String
  content    String
  postImage  String[]
  authorId   String
  user       User?       @relation(fields: [authorId], references: [userFirebaseId])
  ingredient Ingredient? @relation(fields: [id], references: [id])

}

model Ingredient {
  id                Int    @id @default(autoincrement())
  ingredientContent String
  post              Post[]
}

enum Role {
  USER
  ADMIN
}
