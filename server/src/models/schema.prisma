datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userFirebaseId String   @id
  username       String   @unique
  email          String   @unique
  bio            String
  fullName       String
  photoURL       String
  recipes        Recipe[]
}

model Recipe {
  id           Int         @id @default(autoincrement())
  user         User?       @relation(fields: [authorId], references: [userFirebaseId])
  ingredients  Ingredient? @relation(fields: [ingredientId], references: [id])
  categories   Category?   @relation(fields: [categoryId], references: [id])
  categoryId   Int
  authorId     String
  ingredientId Int
  name         String
  content      String
  description  String
  coverImage   String[]
  prepTime     String
  cookTime     String
  servings     String
  recipeSlug   String      @unique
  createdAt    DateTime    @default(now())
  updateAt     DateTime    @updatedAt
}

model Ingredient {
  id          Int      @id @default(autoincrement())
  description String
  recipes     Recipe[]
}

model Category {
  id          Int      @id @default(autoincrement())
  description String
  recipes     Recipe[]
}

enum Role {
  USER
  ADMIN
}
