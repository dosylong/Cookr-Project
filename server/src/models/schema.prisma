datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userFirebaseId String   @id
  username       String   @unique
  email          String   @unique
  bio            String
  fullName       String
  photoURL       String
  recipes        Recipe[]

}

model Recipe {
  id          Int          @id @default(autoincrement())
  categoryId  Int
  authorId    String?
  name        String?
  content     String?
  description String?
  coverImage  String[]
  prepTime    String?
  cookTime    String?
  servings    String?
  recipeSlug  String?      @unique
  createdAt   DateTime     @default(now())
  updateAt    DateTime     @updatedAt
  categories  Category?    @relation(fields: [categoryId], references: [id])
  user        User?        @relation(fields: [authorId], references: [userFirebaseId])
  ingredients Ingredient[]
}

model Ingredient {
  id          Int     @id @default(autoincrement())
  recipeId    Int
  description String
  recipes     Recipe? @relation(fields: [recipeId], references: [id])
}

model Category {
  id          Int      @id @default(autoincrement())
  description String
  recipes     Recipe[]
}

enum Role {
  USER
  ADMIN
}
